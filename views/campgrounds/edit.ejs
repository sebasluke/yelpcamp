<% include ../partials/header %>

<div class="container">

    <h1>Edit <%= campground.name %> </h1>

    <form method="POST" action="/campgrounds/<%= campground._id %>/edit?_method=PUT">
        <div class="form-group">
            <label class="col-sm-2" for="name">Name: </label>
            <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
        </div>
        <div class="form-group">
            <label class="col-sm-2" for="price">Price</label>
            <input type="number" class="form-control" name="campground[price]" value=<%= campground.price %>
            <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
        </div>
        <div class="form-group">
            <textarea name="campground[description]" cols="155" rows="10"><%= campground.description %></textarea>
        </div>


        <button class="btn btn-danger">Submit</button>
    </form>

</div>


<% include ../partials/footer %>