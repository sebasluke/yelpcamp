<% include ../partials/header %>

<h1>Here's the form dude!!!</h1>

<div class="container">
    <div class="jumbotron bg-primary text-light">
        <div class="d-flex justify-content-center mb-5">
            <h1>New comment to <%= campground.name %></h1>
        </div>

        <form method="POST" action="/campgrounds/<%= campground._id %>/comments">
            <div class="form-group row">
                <label for="text" class="col-sm-2">Text</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="comment[text]" placeholder="New comment">
                </div>
            </div>
            <div class="form-group row"> 
                <div class="mx-auto">
                    <button class="btn btn-success btn-lg">New Comment</button>
                </div>
            </div>

        
        </form>

    </div>
</div>



<% include ../partials/footer %>